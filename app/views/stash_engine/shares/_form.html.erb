<div class="sharing_form">
  <p>
    You can share this dataset with others using the url below.
  </p>
  <%# the local variable 'share' should be passed in to this partial when there are multiple per page %>
  <%= form_for(share, remote: true, authenticity_token: true, html: { class: 'c-input' }) do |f| %>
      <div>
        <%= text_field_tag :sharing_link, share.sharing_link,  id: 'sharing_link', class: 'c-input__text', disabled: true,
                         style: 'width:650px; display: inline-block;' %>
        <%= f.hidden_field(:secret_id) %>
        <input type="button"
                value="Copy link"
                data-clipboard-target='sharing_link'
                data-clipboard-text='Default clipboard text from attribute'
                id='d_clip_button'
                class="o-button__plain-text2"
                title='Click me to copy to clipboard.'>
        </input>
      </div>

    <%= f.hidden_field :resource_id %>
    <%= f.hidden_field :id %>
  <% end %>
</div>


